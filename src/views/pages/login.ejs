<!DOCTYPE html>
<!--
LOGIN PAGE
Contains login and register functionality. Associated script file is login.js. Associated stylesheet is login.css

AUTHOR(S): Kieran Stone, Jocelyn McHugo

-->
<html lang="en">
<head>
    <title>Login</title>
    <%- include('../partials/header') %>
    <script src="../../resources/js/login.js"></script>
    <link rel="stylesheet" href="../../resources/css/login.css"> <!-- include page-specific style -->
</head>
<%- include('../partials/navbar') %>
<div class="center">
    <!-- main login form -->
    <form action="/login_response" method="post">
        <input type="email" id="email_login" name="email_login" placeholder="Email"> <br>
        <input type="password" id="password_login" name="password_login" placeholder="Password"> <br>
        <input type="submit" value="Login" class="contrast-button btn btn-primary">
    </form>
    <!-- render error or success using data from the server -->
    <% if (msg){
        if (err) {
            var color = "darkorange";
        } else {
            var color = "var(--contrast-dark)"
        }
        var toShow = `<h5 style="color: ${color};">${msg}</h5>`; %>
    <%- toShow %>
    <% } %>
    <br>
    <!-- launch signup modal -->
    <div class="text-center">
        <a href="#myModal" class="btn btn-info dark-button" data-toggle="modal" onclick="openModal()">Sign up</a>
    </div>
</div>

<!-- signup modal -->
<div id="myModal" class="modal fade">
    <div class="modal-dialog modal-login">
        <div class="modal-content">
            <!-- modal header -->
            <div class="modal-header">
                <div class="avatar">
                    <img src="https://www.tutorialrepublic.com/examples/images/avatar.png" alt="Avatar"/>
                </div>
                <h4 class="modal-title">Sign Up page</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <!-- main registration form -->
            <form action="/register_response" method="post" id="registerForm">
                <div class="modal-body">
                    <!-- first name field -->
                    <div class="form-group">
                        <input type="text" class="form-control" name="firstName" placeholder="First Name" required="required"/>
                    </div>
                    <!-- last name field -->
                    <div class="form-group">
                        <input type="text" class="form-control" name="lastName" placeholder="Last Name" required="required"/>
                    </div>
                    <!-- email field -->
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Email" required="required"/>
                    </div>
                    <!-- first password field -->
                    <div class="form-group">
                        <input id="psw" type="password" class="form-control" name="password" placeholder="Password" required="required"/>
                    </div>
                    <!-- password confirmation field -->
                    <div class="form-group">
                        <input id="cpsw" type="password" class="form-control" name="confirm password" placeholder="Confirm Password" required="required"/>
                    </div>
                    <!-- submit button -->
                    <div class="form-group">
                        <button id="my_submit_button" class="btn btn-block contrast-button" disabled onClick="addedUser()">Sign Up</button>
                    </div>

                </div>
            </form>
            <!-- password requirement footer -->
            <div class="modal-footer">
                <div id="message" style="display: block">
                    <h3>Password must contain the following:</h3>
                    <p id="letter" class="invalid">A <b>lowercase</b> letter</p>
                    <p id="capital" class="invalid">
                        A <b>capital (uppercase)</b> letter
                    </p>
                    <p id="number" class="invalid">A <b>number</b></p>
                    <p id="symbol" class="invalid">A <b>symbol</b> "!@#$%^&*()".</p>
                    <p id="length" class="invalid">Minimum <b>12 characters</b></p>
                    <p id="match" class="invalid">
                        Password and Confirm Password Match
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>